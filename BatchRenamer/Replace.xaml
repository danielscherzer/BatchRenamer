<Window x:Class="BatchRenamer.Replace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRenamer"
        mc:Ignorable="d" ContentRendered="Window_ContentRendered"
        Title="Replace" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
	<Grid Margin="15">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Label Grid.Column="0" Content="Search:" />
		<TextBox Grid.Column="1" x:Name="searchText" HorizontalAlignment="Stretch" Height="23" TextWrapping="Wrap" MinWidth="200"/>
		<Label Grid.Row="1" Grid.Column="0" Content="Replace:" />
		<TextBox Grid.Row="1" Grid.Column="1" x:Name="replaceText" HorizontalAlignment="Stretch" Height="23" TextWrapping="Wrap" />
		<StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
			<Button IsDefault="True" Margin="0,0,10,0">_Replace All</Button>
			<Button IsCancel="True">_Cancel</Button>
		</StackPanel>
	</Grid>
</Window>
